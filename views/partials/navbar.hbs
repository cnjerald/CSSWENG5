<style>
 .left{
            justify-content: flex-start;
        }
        .center{
            justify-content: center;
        }
        .right{
            justify-content: flex-end;
        }

        .searchBox{
            display: flex;
            position: fixed;
            top: 0;
            width: 100%;
            height: 6vh;
            z-index: 100;
            background-color: beige;
        }


        .searchBox > div{
            flex: 1;
            display: flex;
            align-items: center;
        }

        .searchContainer{
            background-color: transparent;
            overflow: hidden;
            height: 5vh;
            display: flex;
            width: 100%;
        }

        .fancySearchBox {
            border-radius: 20px;
            width: 90%; 
            height: 40px;
            font-size: 20px;
            outline: none; 
            transition: border-color 0.3s;
            background-color: transparent;
            border: 2px solid gray; 
            padding-left: 5%;
        }

        .fancySearchBox:focus {
            border-color: black; 
        }

</style>


<nav>
    <header>
    <div class="searchBox">
        <div class="left">
             <p> Left </p> 
        </div>
        <div class="center"> 
            <form class="searchContainer">
                <input class="fancySearchBox" type="search-input" name="stringInput" id="stringInput" placeholder="Search">
            </form>
        </div>
        <div class="right"> 
            <p> Right </p>
        </div>
    </div>
</header>
</nav>