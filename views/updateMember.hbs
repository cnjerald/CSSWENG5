<main>
    <div class="main">

        <div class="profile-details">
            <div class="profile-picture">
                <div class="pfp-img-container img-container">
                    <img src="{{ member.img_path }}" id="profile-pic" >
                </div>
            </div>
            <div class="profile-name">
                <h2 id="profile-name">{{member.name}}</h2>
            </div>
            <div class="profile-note">
                <h2 class="h2-note">Note</h2>
                <p class="note-desc" id="profile-note" {{member.comments}}</p>
            </div>
        </div>

        <div id="personal-form" class="profile-form">
            <div class="profile-information">
                <div class="profile-info-header"><h2>Personal Information</h2></div>

                <div class="profile-item">
                    <div class="detail UIC d1">
                        <label class="detail-label l1">UIC:</label>
                        <div class="detail-text x1">
                            <input type="text" id="UIC" class="input-with-preview" value="{{member.uic_code}}" onfocus="clearInput(this)">
                        </div>
                    </div>
                    <div class="detail Name d2">
                        <label class="detail-label l2">Name:</label>
                        <div class="detail-text x2" id="Name">
                            <input type="text" id="NameInput" class="input-field" value="{{member.name}}" onfocus="clearInput(this)">
                        </div>
                    </div>
                </div>

               <div class="profile-item">
                    <div class="detail Birthday d1">
                        <label class="detail-label l1">Birthday:</label>
                        <div class="input-container">
                            <input type="text" id="BirthdayInput" class="input-field" value="{{member.birthday}}" onfocus="clearInput(this)">
                        </div>
                    </div>

                    <div class="detail Barangay d2">
                        <label class="detail-label l2">Barangay:</label>
                        <div class="input-container">
                            <input type="text" id="BarangayInput" class="input-field" value="{{member.barangay}}" onfocus="clearInput(this)">
                        </div>
                    </div>

                    <div class="detail Location d3">
                        <label class="detail-label l3">Location:</label>
                        <div class="input-container">
                            <input type="text" id="LocationInput" class="input-field" value="{{member.location}}" onfocus="clearInput(this)">
                        </div>
                    </div>
                </div>
    
            <div class="profile-item">
                <div class="detail Gender d1">
                    <label class="detail-label l1">Gender:</label>
                    <div class="input-container">
                        <input type="text" id="GenderInput" class="input-field" value="{{member.gender}}" onfocus="clearInput(this)">
                        
                    </div>
                </div>

                <div class="detail Sex d2">
                    <label class="detail-label l2">Sex:</label>
                    <div class="input-container">
                        <input type="text" id="SexInput" class="input-field" value="{{member.sex}}" onfocus="clearInput(this)">
                       
                    </div>
                </div>
            </div>

            <div class="profile-item">
                <div class="detail Contact last">
                    <label class="detail-label l1">Contact:</label>
                    <div class="input-container">
                        <input type="text" id="ContactInput" class="input-field" value="{{member.contact_number}}" onfocus="clearInput(this)">     
                    </div>
                </div>

                <div class="detail Email last">
                    <label class="detail-label l2">Email:</label>
                    <div class="input-container">
                        <input type="text" id="EmailInput" class="input-field" value="{{member.email}}" onfocus="clearInput(this)">                      
                    </div>
                </div>

                <div class="detail Civil last">
                    <label class="detail-label l3">Civil Status:</label>
                    <div class="input-container">
                        <input type="text" id="CivilInput" class="input-field" value="{{member.civil_status}}" onfocus="clearInput(this)">
                    </div>
                </div>
            </div>

            <div class="profile-item">
                <div class="detail Facebook last">
                    <label class="detail-label l1">Facebook:</label>
                    <div class="input-container">
                        <input type="text" id="FacebookInput" class="input-field" value="{{member.fb_account}}" onfocus="clearInput(this)">
                    </div>
                </div>

                <div class="detail Education last">
                    <label class="detail-label l2">Education:</label>
                    <div class="input-container">
                        <ul>
                            {{#each member.entries}}
                            <li>
                                <strong>Course:</strong> {{this.course}}
                                <strong>Education Year:</strong> {{this.educationYear}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>

                <div class="detail School_Attended last">
                    <label class="detail-label l3">School Attended:</label>
                    <div class="input-container">
                        {{#each member.entries}}
                        <div class="input-field">
                            <input type="text" id="SchoolAttendedInput" class="input-field" value="{{this.school}}" onfocus="clearInput(this)">
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>

            <div class="profile-item">
                <div class="detail Occupation last">
                    <label class="detail-label l1">Occupation:</label>
                    <div class="input-container">
                        <input type="text" id="OccupationInput" class="input-field" value="{{member.occupation}}" onfocus="clearInput(this)">
                    </div>
                </div>

                <div class="detail Designation last">
                    <label class="detail-label l2">Designation:</label>
                    <div class="input-container">
                        <input type="text" id="DesignationInput" class="input-field" value="{{member.designation}}" onfocus="clearInput(this)">
                    </div>
                </div>

                <div class="detail Company last">
                    <label class="detail-label l3">Company:</label>
                    <div class="input-container">
                        <input type="text" id="CompanyInput" class="input-field" value="{{member.company}}" onfocus="clearInput(this)">
                    </div>
                </div>
            </div>
                <button id="saveButton">Save</button>
            </div>
        </div>


        <div id="health-form" class="profile-form">
            <div class="profile-information">
                <div class="profile-info-header"><h2>Health Information</h2></div>

                <div class="profile-item">
                    {{#if member.medications}}
                    {{#each member.medications}}
                    <div class="detail Medication d1">
                        <label class="detail-label l1">Medication:</label>
                        <div class="detail-text col1" id="Medication">{{this.medication}}</div>
                    </div>
                    <div class="detail startDate d2">
                        <label class="detail-label l2">Start Date:</label>
                        <div class="detail-text col1" id="startDate">{{this.startDate}}</div>
                    </div>
                </div>
                    {{/each}}
                    {{/if}}
                    <div class="profile-item">
                        {{#if member.conditions}}
                        {{#each member.conditions}}
                        <div class="detail Condition d1">
                            <label class="detail-label l1">Condition:</label>
                            <div class="detail-text col2" id="Condition">{{member.condition}}</div>
                        </div>
                        {{/each}}
                        {{/if}}
                </div>
                <button class="edit-btn edit-contact" type="submit">Edit</button>
            </div>
        </div>

        <div id="contact-form" class="profile-form">
            <div class="profile-information">
                <div class="profile-info-header"><h2>Contact Information</h2></div>

                <div class="profile-item">
                    <div class="detail ePerson d1">
                        <label class="detail-label l1">Contact Person in Case of Emergency:</label>
                        <div class="detail-text col1" id="ePerson">{{member.ePerson}}</div>
                    </div>
                    <div class="detail eContact d2">
                        <label class="detail-label l1">Contact Number:</label>
                        <div class="detail-text col1" id="eContact">{{member.eContact}}</div>
                    </div>    
                </div>
                <div class="profile-item">
                    <div class="detail eRelationship d1">
                        <label class="detail-label l1">Relationship:</label>
                        <div class="detail-text col1" id="eRelationship">{{member.eRelationship}}</div>
                    </div> 
                    <div class="detail eRelationship d2">
                        <label class="detail-label l1">Contact Address:</label>
                        <div class="detail-text col1" id="eAddress">{{member.eAddress}}</div>
                    </div> 
                </div>
                <button class="edit-btn edit-contact" type="submit">Edit</button>
            </div>
        </div>

        <div class="form-navigate">
            <div class="nav-arrow nav-right">
                <button id="next" class="nav-btn"><span class="nav-icon-right material-symbols-outlined">arrow_back_ios</span></button>
            </div>
            <div class="nav-arrow nav-left">
                <button id="prev" class="nav-btn"><span class="nav-icon-left material-symbols-outlined">arrow_forward_ios</span></button>
            </div>
        </div>
    </div>
    <div class="delete-container">
        <button class="detail-btn delete-btn" type="submit">Delete</button>
    </div>
</main>

<script>


    document.addEventListener("DOMContentLoaded", function() {
        const forms = document.querySelectorAll(".profile-form");
        const nextButton = document.getElementById("next");
        const prevButton = document.getElementById("prev");
        let currentFormIndex = 0;

        forms[currentFormIndex].classList.add("active");

        prevButton.addEventListener("click", function() {
            if (currentFormIndex < forms.length - 1) {
                forms[currentFormIndex].classList.remove("active");
                currentFormIndex++;
                forms[currentFormIndex].classList.add("active");
            }
        });

        nextButton.addEventListener("click", function() {
            if (currentFormIndex > 0) {
                forms[currentFormIndex].classList.remove("active");
                currentFormIndex--;
                forms[currentFormIndex].classList.add("active");
            }
        });

        // Extract UIC code from URL
        //const urlParams = new URLSearchParams(window.location.search);
        // const uicCode = urlParams.get('uic_code');  
    });
   
    function clearInput(input) {
        input.value = ''; 
    }

</script>

<script>
    document.addEventListener("DOMContentLoaded", function() {
    document.getElementById('saveButton').addEventListener('click', function() {
        const uicCode = document.getElementById('UIC').value;
        const name = document.getElementById('NameInput').value;
        const birthday = document.getElementById('BirthdayInput').value;
        const barangay = document.getElementById('BarangayInput').value;
        const location = document.getElementById('LocationInput').value;
        const gender = document.getElementById('GenderInput').value;
        const sex = document.getElementById('SexInput').value;
        const contactNumber = document.getElementById('ContactInput').value;
        const email = document.getElementById('EmailInput').value;
        const civilStatus = document.getElementById('CivilInput').value;
        const facebook = document.getElementById('FacebookInput').value;
        const occupation = document.getElementById('OccupationInput').value;
        const designation = document.getElementById('DesignationInput').value;
        const company = document.getElementById('CompanyInput').value;
        const schoolsAttended = document.querySelectorAll('#SchoolAttendedInput');
        const entries = [];

        schoolsAttended.forEach(input => {
            entries.push({ school: input.value });
        });

        const data = {
            uic_code: uicCode,
            name: name,
            birthday: birthday,
            barangay: barangay,
            location: location,
            gender: gender,
            sex: sex,
            contact_number: contactNumber,
            email: email,
            civil_status: civilStatus,
            fb_account: facebook,
            occupation: occupation,
            designation: designation,
            company: company,
            entries: entries
        };

        fetch('/update-member', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(result => {
            console.log('Member details updated successfully:', result);
            // Redirect to member detail display with the same uic
            window.location.href = `/memberDetail?uic_code=${uicCode}`;
        })
        .catch(error => {
            console.error('Error updating member details:', error);
            // Optionally handle error UI updates
        });
    });
    });


</script>